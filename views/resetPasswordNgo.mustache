<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/forgotPasswordNgo/resetPassword.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Reset password ngo</title>
    <script>
        function togglePassword(passwordInput, eye) {
            const password = document.getElementById(passwordInput);
            if (password.getAttribute("type") === "password") {
                password.setAttribute("type", "text");
                document.getElementById(eye).className = "fa fa-eye-slash";
            } else {
                password.setAttribute("type", "password");
                document.getElementById(eye).className = "fa fa-eye";
            }
        }
    </script>
</head>
<body>
    <script>
        window.onload = function() {
            var errorMessage = '{{messages.error}}';
            if (errorMessage != '') {
                document.getElementById('error-group').style.opacity = '1';
                document.getElementById('errors').innerHTML = errorMessage;
            }
        }
    </script>
    <div class="error-container">
        <div class="alert alert-danger" role="alert" id="error-group" style="opacity: 0; transition: 1s ease;">
            <p id="errors"></p>
        </div>
    </div>
    <div class="container-fluid">
        <div class="outer-container">
            <div class="inner-container">
                <h2>Reset password</h2>
                <form action="/resetPasswordNgo/{{name}}" method="post">
                    <label for="password">New password:</label><br>
                    <input type="password" id="password" name="password" minlength="8" required>
                    <i class="fa fa-eye" id="eye" onclick="togglePassword('password', 'eye')"></i><br><br>
                    <label for="confirmPassword">Re-enter new password</label><br>
                    <input type="password" id="confirmPassword" name="confirmPassword" minlength="8" required>
                    <i class="fa fa-eye" id="eye1" onclick="togglePassword('confirmPassword', 'eye1')"></i><br><br>
                    <button>Reset password</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>